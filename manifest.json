{
  "manifest_version": 2,
  "name": "DOM Guides",
  "version": "0.1.0",
  "description": "DOMに自動でガイドを引いて、長さを計測することができます。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": "icons/icon48_gray.png",
    "default_title": "DOM Guides"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["js/content.js"]
  }],
  "permissions": [
    "tabs",
    "storage",
    "background"
  ],
  "options_page": "option.html"
}